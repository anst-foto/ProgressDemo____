<Window x:Class="ProgressDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProgressDemo"

        Title="MainWindow" 
        Height="250" Width="500">
    <Window.Resources>
        <Style x:Key="StyleDefault"
         TargetType="{x:Type TypeName=FrameworkElement}">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>    
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <Label Content="MIN"
                           Target="{Binding ElementName=InputMin}"
                           Style="{StaticResource ResourceKey=StyleDefault}"/>
                    <TextBox x:Name="InputMin" 
                             Text="{Binding Path=Min, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                             Width="50"
                             Style="{StaticResource ResourceKey=StyleDefault}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="MAX"
                           Target="{Binding ElementName=InputMax}"
                           Style="{StaticResource ResourceKey=StyleDefault}"/>
                    <TextBox x:Name="InputMax" 
                             Text="{Binding Path=Max, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                             Width="50"
                           Style="{StaticResource ResourceKey=StyleDefault}"/>
                </StackPanel>
            </StackPanel>
        
            <Button Content="Start"
                    Command="{Binding Path=StartCommand}"
                           Style="{StaticResource ResourceKey=StyleDefault}"/>
        </StackPanel>
        
        <Grid>
            <ProgressBar Minimum="{Binding Path=Min, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                         Maximum="{Binding Path=Max, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                         Value="{Binding Path=Value, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="25"
                           Style="{StaticResource ResourceKey=StyleDefault}"/>
            <TextBlock Text="{Binding Path=Value, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                           Style="{StaticResource ResourceKey=StyleDefault}"/>
        </Grid>
    </StackPanel>
</Window>
